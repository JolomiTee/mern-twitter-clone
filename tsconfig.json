{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "./backend"
	},
	"include": ["./backend/**/*.ts", "./backend/**/*.d.ts"],
	"exclude": ["node_modules"]
}
